!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'UTF-8'}
    %title= page_title(root: is_root?)
    %link{href: 'https://fonts.googleapis.com/css?family=Droid+Sans:400,700', rel: 'stylesheet'}
    = stylesheet_link_tag 'application', media: 'all'

    %meta{name: 'description', content: get_description}
    %meta{name: 'keywords', content: 'kevin ketfi,portfolio,folio,3d 2d artist,concept,game,modeling,graphics design,digital painting,cinema 4d'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    %meta{property: 'og:site_name', content: 'Ketfi Kevin - Portfolio'}
    %meta{property: 'og:title', content: page_title(root: is_root?)}
    %meta{property: 'og:description', content: get_description}
    %meta{property: 'og:url', content: 'http://www.ketfikevin.com'}
    %meta{property: 'og:type', content: 'website'}
    %meta{property: 'og:image', content: image_url('ketfi-kevin-share.png')}

    %meta{name: 'p:domain_verify', content: 'e13135058091dbe0ac33723d9531cfe3'}
    %meta{name: 'twitter:title', content: page_title(root: is_root?)}
    %meta{name: 'twitter:image', content: image_url('ketfi-kevin-share.png')}
    %meta{name: 'twitter:url', content: 'http://www.ketfikevin.com'}
    %meta{name: 'twitter:card', content: 'summary'}

    = favicon_link_tag 'favicon.png'
    = csrf_meta_tags

  %body{class: body_class}
    %header#header.container
      %button.filter-button
        - 8.times do
          %i

      %h1.logo
        = link_to 'Portfolio Ketfi Kevin', root_path, {data: {push: true}}

      %ul.contact-infos
        - if Setting.last.present?
          %li
            %a.cv-link.special-link{href: Setting.last.cv, target: 'blank'} CV
        %li
          %a.email.special-link
            ketfikevin [at] gmail [dot] com

    %main#content
      .fade-content
        = yield

    %footer#footer
      %p
        Website by #{ link_to 'spharian.be', 'http://spharian.be', target: '_blank', class: 'special-link' } - content by its owner

    = javascript_include_tag 'application'

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-46153550-2', 'auto');
      ga('send', 'pageview');
